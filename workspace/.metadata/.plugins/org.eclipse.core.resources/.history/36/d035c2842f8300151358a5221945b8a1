			@Test (priority = 35)
			public void logOut() throws InterruptedException {
				Thread.sleep(3000);
				driver.findElement(By.cssSelector(".appian-body .GGID2ICBDMB a")).click();
				Thread.sleep(1000);
				driver.findElement(By.partialLinkText("Sign Out")).click();
			}

			@Test (priority = 36)
			public void logInAo() throws InterruptedException {
			driver.findElement(By.xpath("/html/body/div[2]/div/form[2]/div[2]/div[2]/input")).sendKeys("test.ao10@itgfirm.com"); // enter username 
			driver.manage().timeouts().implicitlyWait(2, TimeUnit.SECONDS); // wait 2 secs
			driver.findElement(By.xpath("/html/body/div[2]/div/form[2]/div[3]/div[2]/input")).sendKeys("easi123!"); // enter password
			driver.manage().timeouts().implicitlyWait(2, TimeUnit.SECONDS); // wait 2 secs
			driver.findElement(By.xpath("/html/body/div[2]/div/form[2]/div[5]/div/div[2]/input")).click(); // click submit
			Thread.sleep(1000);
			driver.findElement(By.partialLinkText("Tasks")).click();
			Thread.sleep(1000);
			//driver.findElement(By.partialLinkText("PR Has Been Routed")).click(); ---- Uncomment when task is ready to approve
			//Thread.sleep(2000);
			//driver.findElement(By.xpath("//button[contains(.,'Approve')]")).click();---- Uncomment when task is ready to approve
			}
			
