package easiTest;



import java.util.concurrent.TimeUnit;
import org.openqa.selenium.By;
import org.openqa.selenium.Keys;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.testng.annotations.Test;





public class TestPlace {
 static WebDriver driver = new FirefoxDriver(); // need to test in Chrome and fix driver 

 
	@Test (priority = 0)
	public void logIn() throws InterruptedException {
	driver.get("https://easi-test.itg.com/suite/tempo/"); // directed to easi test environment
	driver.manage().window().maximize(); // maximize window 
	driver.findElement(By.xpath("/html/body/div[2]/div/form[2]/div[2]/div[2]/input")).sendKeys("test.co10@itgfirm.com"); // enter username 
	driver.manage().timeouts().implicitlyWait(2, TimeUnit.SECONDS); // wait 2 secs
	driver.findElement(By.xpath("/html/body/div[2]/div/form[2]/div[3]/div[2]/input")).sendKeys("easi123!"); // enter password
	driver.manage().timeouts().implicitlyWait(2, TimeUnit.SECONDS); // wait 2 secs
	driver.findElement(By.xpath("/html/body/div[2]/div/form[2]/div[5]/div/div[2]/input")).click(); // click submit
	Thread.sleep(3000);
	}
	
	@Test (priority = 1)
	public void actionTab () throws InterruptedException{
	Thread.sleep(3000);
	driver.findElement(By.partialLinkText("Actions")).click();
	
	
	}
	@Test (priority = 2)
	public void createPrOne () throws InterruptedException {
	Thread.sleep(3000);
	driver.findElement(By.partialLinkText("Create New PR")).click(); // click "Create New PR"
	
	}
	
	@Test (priority = 3)
	public void createPrTwo () throws InterruptedException{  
	//Thread.sleep(1000);	
	driver.manage().timeouts().implicitlyWait(2, TimeUnit.SECONDS); 
	driver.findElement(By.xpath("//label[contains(text(),'Create a new PR')]")).click(); // click radio button "create a new PR"
	Thread.sleep(1000);
	driver.findElement(By.xpath("//button[contains(.,'Continue')]")).click(); // click Continue 
	//Thread.sleep(1000);
	//driver.manage().timeouts().implicitlyWait(2, TimeUnit.SECONDS); 
	}
	
	@Test (priority = 4)
	public void createPrThree (){
	driver.findElement(By.xpath("//label[contains(text(),'PR Title')]")).sendKeys("Testing Sun"); // PR title
	driver.findElement(By.xpath("//label[contains(text(),'PR Description')]")).sendKeys("Test PR");//PR Description 
	driver.findElement(By.xpath("//button[contains(.,'Add Address Information')]")).click(); // Click "Add Address Information"
	}
	
	@Test (priority = 5)
	public void createPrFour(){
	driver.manage().timeouts().implicitlyWait(2, TimeUnit.SECONDS); // wait 2 secs
	driver.findElement(By.xpath("//button[contains(.,'Create PR')]")).click();// Click Create PR button
	}
	
	@Test  (priority = 6)
	public void createPrFinal() throws InterruptedException {
	//driver.manage().timeouts().implicitlyWait(2, TimeUnit.SECONDS); // wait 2 secs
	Thread.sleep(2000);
	driver.findElement(By.partialLinkText("This PR Record")).click(); // Click link "This PR Record..." 
	Thread.sleep(2000);
	}
	
	@Test (priority = 7)
	public void prSummary (){
		driver.findElement(By.partialLinkText("Related Actions")).click();
	}	
	@Test (priority = 8)
	   public void finalizePR () throws Exception{
	   Thread.sleep(2000);
	   driver.findElement(By.partialLinkText("Finalize PR")).click();
	   Thread.sleep(2000);
	   driver.findElement(By.xpath("//label[contains(.,'Manage Routing List')]")).click();
	   Thread.sleep(2000);
	   driver.findElement(By.xpath("//button[contains(.,'Continue')]")).click();
	   
}
	   @Test (priority = 9)
	   public void manageRouting() throws Exception{
	   Thread.sleep(2000);
	   driver.findElement(By.partialLinkText("+Add Routing Entry")).click();
	   Thread.sleep(2000);
	   driver.findElement(By.cssSelector(".appian-body .GGID2ICBKQB")).sendKeys("test.");
	   Thread.sleep(1000);
	   driver.findElement(By.cssSelector(".appian-body .GGID2ICBKQB")).sendKeys("ao10@itgfirm.com");
	   Thread.sleep(2000);
	   driver.findElement(By.cssSelector(".appian-body .GGID2ICBKQB")).sendKeys(Keys.ENTER);
	   Thread.sleep(2000);
	   driver.findElement(By.xpath("/html/body/div[7]/div[3]/div/div[2]/div/div[2]/div[3]/div/div/div/form/div[2]/div/div/div/div/div/div/div[5]/div[3]/div/div/div/div/div/div/div/div/div[3]/div/table/tbody/tr/td[3]/div/div/div/div/div[1]/div/select")).sendKeys("Approv");
	   Thread.sleep(5000);
	   driver.findElement(By.xpath("//button[contains(.,'Save')]")).click();
	   
	   }
	   @Test (priority = 10)
	   public void manageRoutingTwo() throws Exception{
	   Thread.sleep(2000);
