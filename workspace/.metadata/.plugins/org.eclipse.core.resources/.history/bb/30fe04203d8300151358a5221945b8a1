package easiTest;



import java.util.concurrent.TimeUnit;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.testng.annotations.Test;



public class RegressionSol {
static WebDriver driver = new FirefoxDriver(); 
String A = ("test.co10@itgfirm.com"); // change
String B = ("easi123!"); // change
String C = ("Testing"); // change 
String D = ("Test PR"); // change 

 
	@Test (priority = 0)
	public void logIn() throws InterruptedException {
	
	driver.get("https://easi-test.itg.com/suite/tempo/"); // directed to easi test environment
	driver.manage().window().maximize(); // maximize window 
	driver.findElement(By.xpath("/html/body/div[2]/div/form[2]/div[2]/div[2]/input")).sendKeys(A); // username 
	driver.manage().timeouts().implicitlyWait(2, TimeUnit.SECONDS); // wait 2 secs
	driver.findElement(By.xpath("/html/body/div[2]/div/form[2]/div[3]/div[2]/input")).sendKeys(B); // password
	driver.manage().timeouts().implicitlyWait(2, TimeUnit.SECONDS); // wait 2 secs
	driver.findElement(By.xpath("/html/body/div[2]/div/form[2]/div[5]/div/div[2]/input")).click(); // click submit
	Thread.sleep(2000);
	}
	
	@Test (priority = 1)
	public void actionTab () throws InterruptedException{
	Thread.sleep(2000);
	driver.findElement(By.partialLinkText("Actions")).click(); //Actions tab 
	Thread.sleep(2000);
	}
	
	@Test (priority = 2)
	public void createSolOne () throws InterruptedException {
	Thread.sleep(2000);
	driver.findElement(By.partialLinkText("Create New Solicitation")).click(); // click "Create New PR"
	Thread.sleep(2000);
	
	}
	
	
	}