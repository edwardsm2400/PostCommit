package pages;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.testng.annotations.Test;

public class RecordsPage {
  
  
  WebDriver driver;
  
  By records=(By.partialLinkText("Records"));
  By carriers=(By.partialLinkText("Carriers"));
  By sacs=(By.partialLinkText("SACs"));
  By users=(By.partialLinkText("Users"));
  
  
  public RecordsPage(WebDriver driver) {
	  this.driver=driver;
  }
  
  public void clickCarriers() {
  driver.manage().timeouts().implicitlyWait(15, TimeUnit.SECONDS);  
  driver.findElement(records).click();    
  driver.findElement(carriers).click();  
  }
  
  public void clickSacs() {
	  driver.manage().timeouts().implicitlyWait(15, TimeUnit.SECONDS);
	  driver.findElement(records).click();
	  driver.findElement(sacs).click();  
	  }
  
  public void clickUsers() {
	  driver.manage().timeouts().implicitlyWait(15, TimeUnit.SECONDS);
	  driver.findElement(records).click();
	  driver.findElement(users).click();  
	  }
}
